    {
    "layer": "top",
    "position": "top",
    "margin-top": 8,
    "width": 1570, //screen witdh divided by scaling factor
    "modules-left": [
        "custom/launcher",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "cava",
        "pulseaudio",
        "bluetooth",
        "backlight",
        "network",
        "battery"
    ],
    //////////////////////////////////////////////////////////////////
    "custom/launcher": {
        "format": "󰣇",
        "on-click": "rofi -show drun",
        "tooltip": false
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-active": "",
        "on-click": "activate",
        "format-icons": {
            "default": "",
            "active": ""
        },
        "persistent-workspaces": {
            "*": 5
        },
        "sort-by-number": true
    },
    //////////////////////////////////////////////////////////////////
    "clock": {
        "format": "{:%H:%M, %d.%m.%Y}"
    },
    //////////////////////////////////////////////////////////////////
    "cava": {
        "framerate": 30,
        "autosens": 1,
        "bars": 14,
        "lower_cutoff_freq": 50,
        "higher_cutoff_freq": 10000,
        "method": "pipewire",
        "source": "auto",
        "stereo": true,
        "bar_delimiter": 0,
        "noise_reduction": 0.77,
        "input_delay": 2,
        "hide_on_silence": true,
        "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█" ],
        "actions": {
            "on-click-right": "mode"
        }
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}",
        "format-muted": "",
        "format-icons": {
            "headphone": "",
            "headset": "󰋎",
            "phone": "",
            "phone-muted": "",
            "portable": "",
            "car": "",
            "default": ["", ""]
        },
        "scroll-step": 1,
        "ignored-sinks": ["Easy Effects Sink"]
    },
    "bluetooth": {
        "format": "",
        "format-on": " on",
        "format-disabled": "", // an empty format will hide the module
        "format-connected": "󰂱 {device_alias}",
        "tooltip-format": "",
        "on-click": "kitty bluetui"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{percent}% {icon}",
        "format-icons": ["", ""]
    },
    "network": {
        "on-click": "kitty iwctl",
        "interface": "wlan0",
        "format": "{ifname}",
        "format-wifi": "{essid} ",
        "format-ethernet": "{ipaddr}/{cidr} 󰊗",
        "format-disconnected": "offline", //An empty format will hide the module.
        "tooltip-format": "{ifname} via {gwaddr} 󰊗",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
        "tooltip-format-ethernet": "{ifname} ",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50
    },
    "battery": {
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% {icon} ",
        "format-icons": ["", "", "", "", ""]
    }
}
